def get_pet_info():
    # Запрос вида питомца у пользователя
    pet_type = input("Введите вид вашего питомца: ")
    
    # Запрос клички питомца
    pet_name = input("Введите кличку вашего питомца: ")
    
    # Запрос возраста питомца
    pet_age = input("Введите возраст вашего питомца: ")
    
    # Формирование и вывод предложения с информацией о питомце
    print(f'Это {pet_type} по кличке "{pet_name}". Возраст: {pet_age} года.')

# Вызов функции для запуска процесса запроса информации
get_pet_info()
